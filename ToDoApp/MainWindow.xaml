<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:ToDoApp.Models"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="ToDoApp.MainWindow"
        Title="Simple Todo" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" av:DesignWidth="941.383" av:DesignHeight="546.46">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="8" Background="CadetBlue">
        <ItemsControl ItemsSource="{Binding Items}">

            <ItemsControl.Resources>
                <!-- Add-group tile (first item) -->
                <DataTemplate DataType="{x:Type models:AddGroupPlaceHolder}">
                    <Border Width="280" Height="180" Margin="10" CornerRadius="6" Background="#4CB6D6">
                        <Button Command="{Binding DataContext.AddGroupCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                Background="Transparent" BorderThickness="0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontSize="48" Text="+" HorizontalAlignment="Center" />
                                <TextBlock Text="Add New Group" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </DataTemplate>

                <!-- Group card -->
                <DataTemplate DataType="{x:Type models:ToDoGroup}">
                    <Border Width="280" Margin="10" Padding="8" CornerRadius="6" Background="#66BFE0" BorderBrush="#2F8FAF" BorderThickness="6">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,6">
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" BorderThickness="0" Background="Transparent" DockPanel.Dock="Left"/>
                                <Button Content="X" Width="28" Height="28" DockPanel.Dock="Right"
                                        Command="{Binding DataContext.RemoveGroupCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                        CommandParameter="{Binding}" />
                            </DockPanel>

                            <!-- Tasks: scroll inside the group if there are many -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                <ItemsControl ItemsSource="{Binding Tasks}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox IsChecked="{Binding IsDone}" VerticalAlignment="Top" Margin="4"/>

                                                <!-- word-wrapping text in the middle; the TextBox expands vertically -->
                                                <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"
                                                         TextWrapping="Wrap" BorderThickness="0" Background="Transparent" AcceptsReturn="False"/>

                                                <Button Content="X" Grid.Column="2" Width="24" Height="24"
                                                        Command="{Binding DataContext.RemoveTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <Button Content="+ Add Task" Margin="4"
                                    Command="{Binding DataContext.AddTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                    CommandParameter="{Binding}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- ItemWidth sets how wide each group/tile is. Adjust to taste. -->
                    <WrapPanel ItemWidth="300" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

        </ItemsControl>
    </ScrollViewer>
</Window>
